<%= form_with model: school do |form| %>
  <div class='mb-3'>
    <%= form.label :name, :class => 'form-label' %><br>
    <%= form.text_field :name, :class => 'form-control', :required => true %>
    <% school.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
    <div class='mb-3'>
      <%= form.label :address, :class => 'form-label' %><br>
      <%= form.text_field :address, :class => 'form-control', :required => true %><br>
      <% school.errors.full_messages_for(:address).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit :class => 'btn btn-success' %>
    </div>
  <% end %>